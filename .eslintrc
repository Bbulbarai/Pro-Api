{
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": { 
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "no-use-before-define": 0,
    "no-underscore-dangle": 0,
    "no-useless-escape": 0,
    "no-unused-vars": 0, 
    "no-param-reassign": 0, 
    "no-console": 0,
    "arrow-body-style": 0,
    "prefer-destructuring": 0,
    "prefer-reflect": 0,
    "implicit-arrow-linebreak": 0,
    "arrow-parens": 0,
    "comma-dangle": 0,
    "quotes": 0,
    "object-curly-newline": 0
  }
}
